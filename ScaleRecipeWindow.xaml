<Window x:Class="WpfRecipeApp.ScaleRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scale Recipe" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="10">
            <TextBlock Text="Scale Recipe By:" FontWeight="Bold"/>
            <ComboBox Name="ScaleFactorComboBox" Margin="0,0,0,10"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="10">
            <Button Content="Scale" Click="Scale_Click" Width="75"/>
            <Button Content="Cancel" Click="Cancel_Click" Width="75" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
